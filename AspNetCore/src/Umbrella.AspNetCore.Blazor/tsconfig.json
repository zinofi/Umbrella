{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"removeComments": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es6",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"downlevelIteration": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"lib": [ "ES2019", "dom" ],
		"typeRoots": [
			"./node_modules/@types",
			"./Content/Scripts/types"
		],
		"types": [ "webpack-env" ],
		"baseUrl": "/node_modules"
	},
	"exclude": [
		"bin",
		"obj",
		"node_modules",
		"wwwroot",
		"gulpfile.js",
		"webpack.*",
		"**/postcss.config.js"
	]
}