@typeparam TOption

<div class="u-checkbox-group @CssClass">
    <ul class="u-checkbox-group__items">
        @foreach(var option in OptionsToRender)
        {
            <li class="u-checkbox-group__item" @key="option">
                <UmbrellaCheckbox Value="option.Option.IsSelected" ValueExpression="() => option.Option.IsSelected" ValueChanged="() => OnOptionSelectionChanged(option)" Text="@option.Text" />
            </li>
        }
    </ul>
</div>