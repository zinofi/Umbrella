<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<DocumentationFile>bin\Release\netstandard2.0\Umbrella.DataAccess.Mapping.xml</DocumentationFile>
